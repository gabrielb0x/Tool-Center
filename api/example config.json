{
  "port": 8000,
  "gin_mode": "release",
  "version": "1.0.0",
  "URL_version": "v1",
  "URL_api": "https://api.example.com",
  "URL_web": "https://example.com",
  "cors_allowed_origin": "https://example.com",
  "debug": false,
  "logs": {
    "enabled": true,
    "path": "/path/to/logs/api.log"
  },
  "database": {
    "host": "localhost",
    "port": 3306,
    "user": "dbuser",
    "password": "dbpassword",
    "dbname": "dbname"
  },
  "email": {
    "host": "smtp.example.com",
    "port": 465,
    "username": "user@example.com",
    "password": "emailpassword",
    "from": "user@example.com"
  },
  "discord_webhook_url": "",
  "webhook_secret": "",
  "turnstile": {
    "signin_secret": "YOUR_SIGNIN_SECRET_KEY",
    "signup_secret": "YOUR_SIGNUP_SECRET_KEY",
    "timeout_seconds": 5
  },
  "cleanup": {
    "check_interval": 600,
    "grace_period": 10
  },
  "storage": {
    "avatar_dir": "/var/www/toolcenter/storage/avatars",
    "tools_image_dir": "/var/www/toolcenter/storage/tools_images"
  },
  "moderation": {
    "max_ban_days": 30,
    "auto_unban": true
  },
  "cooldowns": {
    "email_change_days": 30,
    "username_change_days": 30,
    "tool_post_hours": 24,
    "avatar_change_hours": 24
  },
  "two_factor": {
    "issuer": "ToolCenter"
  },
  "password_reset": {
    "token_expiry_minutes": 15
  },
  "status_banner": {
    "error_rate_threshold": 0.3,
    "window_minutes": 10,
    "link": "",
    "message": "Des perturbations sont en cours.",
    "activated_for_testing": true
  },
  "private_news": {
    "password": "change-me",
    "token_hours": 24
  },
  "user_search_limit": 10,
  "user_public_tools_limit": 3
}
